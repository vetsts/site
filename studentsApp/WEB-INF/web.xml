<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD
  Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>
 
<web-app     xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
 
 	<welcome-file-list>
		
	</welcome-file-list>
  

  <servlet>
	<servlet-name>GeneralServlet</servlet-name>
    <servlet-class>students.web.GeneralServlet</servlet-class>
 </servlet>
  
 <servlet-mapping>
	<servlet-name>GeneralServlet</servlet-name>
	<url-pattern>/update</url-pattern>
    <url-pattern>/index</url-pattern>
	<url-pattern>/delete</url-pattern>
	<url-pattern>/edit</url-pattern>
	<url-pattern>/marks</url-pattern>
    <url-pattern>/markadd</url-pattern>
	<url-pattern>/subjectadd</url-pattern>
	<url-pattern>/studentadd</url-pattern>
	<url-pattern>/edit-student</url-pattern>
	<url-pattern>/edit-subject</url-pattern>
	<url-pattern>/delete-student</url-pattern>
	<url-pattern>/delete-subject</url-pattern>
	<url-pattern>/subjects</url-pattern>
	<url-pattern></url-pattern>

 </servlet-mapping>
 
 <servlet>
	<servlet-name>ExitServlet</servlet-name>
    <servlet-class>students.web.ExitServlet</servlet-class>
 </servlet>
  
 <servlet-mapping>
	<servlet-name>ExitServlet</servlet-name>
    <url-pattern>/exit</url-pattern>
 </servlet-mapping>
 
 <listener>
		<listener-class>students.web.SessionListener</listener-class>
	</listener>
	
</web-app>